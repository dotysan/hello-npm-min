{
    "name": "hello-npm-min",
    "version": "0.1.7",
    "description": "Testing minimalist NPM module",
    "license": "MIT",
    "author": "Curtis Doty <Curtis@GreenKey.net> (https://github.com/dotysan)",
    "homepage": "https://github.com/dotysan/hello-npm-min#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dotysan/hello-npm-min.git"
    },
    "bugs": {
        "url": "https://github.com/dotysan/hello-npm-min/issues"
    },
    "keywords": [
        "hello",
        "minimalist",
        "module",
        "npm",
        "world"
    ],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc --showConfig && tsc --listEmittedFiles --diagnostics",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "hello": "npm run build && node dist/index.js",
        "prepublishOnly": "npm run build",
        "release": "npm publish --access public",
        "bump": "git stash && npm version patch && git stash pop",
        "push": "git push --follow-tags"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.18",
        "typescript": "^5.9.3"
    }
}
